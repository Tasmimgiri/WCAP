<%= form_for([@patient, @treatment_history, @treatment]) do |f| %>
  <% if @treatment.errors.any? %>
    <div id="error_explanation">
      <h2><%= "\u200f #{@patient.errors.count} " + ( t 'pluralize_error') + " " +  (t  'form_error_first_part') + " " + (t 'patient') +" "+ (t 'form_error_second_part')%></h2>
      <ul>
      <% @treatment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t 'type' %><br>
    <%= f.select :treatment_type, options_for_select(Treatment.treatment_types.collect { |s| [I18n.t(s[0]), s[0]] }, selected: @treatment.treatment_type), {} ,:class=>"reverse-dir" %>
  </div>
  <div class="field">
    <%= t 'count' %><br>
    <%= f.number_field :count, :class=>"reverse-dir", :onchange => "checkIfNumeric.call(this);" %>
  </div>
  <div class="field">
    <%= t 'max_avoidance_day' %><br>
    <%= f.number_field :max_avoidance_day, :class=>"reverse-dir", :onchange => "checkIfNumeric.call(this);" %>
  </div>
  <div class="field">
    <%= t 'description' %><br>
    <%= f.text_area :description, :class=>"reverse-dir"  %>
  </div>
  <div class="field">
    <%= t 'in_month_used' %><br>
    <%= f.number_field :in_month_used, :class=>"reverse-dir", :onchange => "checkIfNumeric.call(this);" %>
  </div>
  <div class="actions">
    <%= f.submit (t 'submit', :default => "Submit"),:class=>"btn btn-default smooth-scroll"%>
  </div>
<% end %>
