<div class='container'>
  <div class='row'>
      <div class='col-md-1'>
      </div>
      <div class='col-md-10 col-sm-10'>
        <div class='panel panel-primary '>
          <div class="panel-heading">
              <h3 class="panel-title">
                <%= t 'treatments_list' %>
              </h3>
          </div>
            <table class='table table-striped table-bordered text-center'> 
              <thead>
                <tr>

                  <th class='text-center'><%= t 'treatment_type'%></th>
                  <th class='text-center'><%= t 'count'%></th>
                  <th class='text-center'><%= t 'max_avoidance_day'%></th>
                  <th class='text-center'><%= t 'description'%></th>
                  <th class='text-center'><%= t 'in_month_used'%></th>
                  <th class='text-center' colspan="3"><%= link_to (t 'new_abusing'), new_patient_treatment_history_treatment_path(@patient,@treatment_history), :class => "btn , btn-primary" %></th>
                </tr>
              </thead>

              <tbody>
                <% @treatment_history.treatments.each do |treatment| %>
                  <tr>
                    <td><%= t treatment.treatment_type %></td>
                    <td><%= treatment.count %></td>
                    <td><%= treatment.max_avoidance_day %></td>
                    <td><%= treatment.description %></td>
                    <td><%= treatment.in_month_used %></td>
                    <td><%= link_to (t 'show'), patient_treatment_history_treatment_path(@patient, @treatment_history, treatment), :class => "btn btn-primary"  %></td>
                      <td><%= link_to (t 'edit'), edit_patient_treatment_history_treatment_path(@patient, @treatment_history, treatment), :class => "btn btn-primary"  %></td>
                      <td><%= link_to (t 'destroy'), patient_treatment_history_treatment_path(@patient, @treatment_history, treatment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>


        <div class='text-center'>
        </div>
        </div>
      <div class='col-md-'>
      </div>
    </div>
  </div>
</div>