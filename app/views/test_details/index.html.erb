<div class='container'>
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'test_details_list'%></h1>
      <div class='panel panel-primary '>
        
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'><%= t "test_name" %></th>
              <th class='text-center'><%= t "part_count" %></th>
              <th class='text-center'><%= t "study" %></th>
              <th class='text-center' colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @study.test_details.each do |test_detail| %>
              <tr>
                <td><%= test_detail.name %></td>
                <td><% if test_detail.name == Ddt.name %>
                    <%= test_detail.study.ddt_questions.count %>
                  <% else %>
                    <%= test_detail.part_count %>
                  <% end %>
                </td>
                <td><%= test_detail.study.description %></td>
                <td><%= link_to (t 'show'), study_test_detail_path(@study,test_detail), :class => "btn btn-primary"  %></td>
                <td><%= link_to (t 'edit'), edit_study_test_detail_path(@study,test_detail), :class => "btn btn-primary" %></td>
                <td><%= link_to (t 'destroy'), study_test_detail_path(@study,test_detail), :class => "btn btn-danger", method: :delete, data: { confirm: (t 'are_you_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


      <div class='text-center'>
        <%= link_to (t 'new_test_detail'), new_study_test_detail_path(@study), :class => "smooth-scroll btn btn-lg btn-link " %>
      </div>
      </div>
    <div class='col-md-1'>
    </div>

    <div class="text-center"> 
      <%= link_to (t 'back_to_study'),(@study), :class => "btn btn-primary" %>
    </div>
  </div>
</div>