<div class='container'>
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'test_details_list'%></h1>
      <div class='panel panel-primary '>
        
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'>Name</th>
              <th class='text-center'>Count</th>
              <th class='text-center'>Part count</th>
              <th class='text-center'>Study</th>
              <th class='text-center' colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @study.test_details.each do |test_detail| %>
              <tr>
                <td><%= test_detail.name %></td>
                <td><%= test_detail.count %></td>
                <td><%= test_detail.part_count %></td>
                <td><%= test_detail.study.description %></td>
                <td><%= link_to (t 'show'), study_test_detail_path(@study,test_detail), :class => "btn btn-primary"  %></td>
                <td><%= link_to (t 'edit'), edit_study_test_detail_path(@study,test_detail), :class => "btn btn-primary" %></td>
                <td><%= link_to (t 'destroy'), study_test_detail_path(@study,test_detail), :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


      <div class='text-center'>
        <%= link_to (t 'new_test_detail'), new_study_test_detail_path(@study), :class => "smooth-scroll btn btn-lg btn-link " %>
      </div>
      </div>
    <div class='col-md-1'>
    </div>

    <div class="text-center"> 
      <%= link_to (t 'back_to_study'),(@study), :class => "btn btn-primary" %>
    </div>
  </div>
</div>