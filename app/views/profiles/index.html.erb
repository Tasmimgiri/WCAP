<h1><%= I18n.t 'profiles_list'%></h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th><%= I18n.t 'user'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.user %></td>
        <td><%= link_to I18n.t 'Show', profile %></td>
        <td><%= link_to I18n.t 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to I18n.t 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
