<div class='container'>
  
  <div class='row'>
    <div class='col-md-3'>
    </div>
    <div class='col-md-6 col-sm-6'>
      <h1 class='section-title'><%= t 'profiles_list'%></h1>
      <div class='panel panel-primary '>
        <table class='table table-striped table-bordered'>
          <thead>
            <tr>
              <th><%= t 'first_name'%></th>
              <th><%= t 'last_name'%></th>
              <th><%= t 'user'%></th>
              <th colspan="2"></th>
              <th><%= t 'admin'%></th>
            </tr>
          </thead>

          <tbody>
            <% @profiles.each do |profile| %>
              <tr>
                <td><%= profile.first_name %></td>
                <td><%= profile.last_name %></td>
                <td><%= profile.user.email %></td>
                <td><%= link_to (t 'show'), profile , :class => "btn btn-primary" %></td>
                <td><%= link_to (t 'edit'), edit_profile_path(profile) ,:class => "btn btn-primary" %></td>
                <td>
                  <% if profile.user.admin %>
                   <%= image_tag("tik.png", height: '32', width: '32')%>
                  <% else %>
                   <%= image_tag("cross.png", height: '32', width: '32')%> 
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      

    </div>
    <div class='col-md-3'>
    </div>
  </div>
</div>