<h1><%= t 'profiles_list'%></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'first_name'%></th>
      <th><%= t 'last_name'%></th>
      <th><%= t 'user'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.user.email %></td>
        <td><%= link_to (t 'show'), profile %></td>
        <td><%= link_to (t 'edit'), edit_profile_path(profile) %></td>
        <td><%= link_to (t 'destroy'), profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t 'new_profile'), new_profile_path %>
