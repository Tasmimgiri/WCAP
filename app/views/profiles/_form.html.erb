<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t 'first_name' %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= t 'last_name' %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= t 'admin' %><br>
    <%= check_box_tag :admin, 1, @profile.user.admin %>
  </div>

  <div class="field">
    <%= t 'user' %><br>
    <%= @profile.user.email %>
  </div>
  <div class="actions">
    <%= f.submit (t 'submit', :default => "Submit") , :class => "btn btn-default btn-block"%>
  </div>
<% end %>
