<div class='container'>
  
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'clinics_list'%></h1>
      <div class='panel panel-primary '>
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'><%= t 'clinic_name'%></th>
              <th class='text-center'><%= t 'supervisor'%></th>
              <th class='text-center' colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @clinics.each do |clinic| %>
              <tr>
                <td><%= clinic.name %></td>
                <td><%= clinic.supervisor ? clinic.supervisor.email : "" %></td>
                <td><%= link_to (t 'show'), clinic, :class => "btn btn-primary"  %></td>
                <td><%= link_to (t 'edit'), edit_clinic_path(clinic), :class => "btn btn-primary"  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      
      <div class='text-center'>
        <%= link_to (t 'new_clinic'), new_clinic_path, :class => "smooth-scroll btn btn-lg btn-link " %>
      </div>
      </div>
    <div class='col-md-1'>
    </div>
  </div>
</div>