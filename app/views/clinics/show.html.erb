<section class="section section-center section-testimonial loaded">
  <div class='container'>
    
    <div class='row'>
      <div class='col-md-3'>
      </div>

      <div class='col-md-6 col-sm-6'>
      <div class='panel panel-primary '>
        <div class="panel-body">
          <p>
            <strong><%= t 'clinic_name'%>:</strong>
            <%= @clinic.name %>
          </p>

          <p>
            <strong><%= t 'supervisor'%>:</strong>
            <% if @clinic.supervisor %>
              <%= @clinic.supervisor.email %>
            <% end %>
          </p>

          <% if @clinic.supervisor.email == current_user.email %>

            <p>
              <%= link_to (t 'clinic_examiners_list'), get_examiners_clinic_path(@clinic), :class => "btn btn-primary" %>
            </p>

          <% end %>
        </div>
      </div>

      <%= link_to (t 'edit'), edit_clinic_path(@clinic), :class => "btn btn-primary" %>
      <%= link_to (t 'back'), clinics_path, :class => "btn btn-primary" %>
      </div>
      <div class='col-md-3'>
      </div>
    </div>
  </div>
</section>