<%= form_for(@clinic) do |f| %>
  <% if @clinic.errors.any? %>
    <div id="error_explanation">
      <h2><%= "\u200f #{@clinic.errors.count} " + ( t 'pluralize_error') + " " +  (t  'form_error_first_part') + " " + (t 'clinic') +" "+ (t 'form_error_second_part')%></h2>

      <ul>
      <% @clinic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t 'clinic_name' %><br>
    <%= f.text_field :name,:class=>"reverse-dir" %>
  </div>
  <div class="field">
    <%= t 'supervisor' %><br>
    <%= f.select :supervisor_id, options_for_select(User.all.collect { |s| [s.identity, s.id] }, selected: @clinic.supervisor_id), {} ,:class=>"reverse-dir" %>
  </div>
  <div class="actions">
    <%= f.submit (t 'submit', :default => "Submit"), :class => "btn btn-default smooth-scroll"%>
  </div>
<% end %>
