<div class='container'>
  <div class='row'>
      <div class='col-md-1'>
      </div>
      <div class='col-md-10 col-sm-10'>
        <div class='panel panel-primary '>
          <div class="panel-heading">
              <h3 class="panel-title">
                <%= t 'abusings_list' %>
              </h3>
          </div>
          <table class='table table-striped table-bordered text-center'>
            <thead>
              <tr>
                <th class='text-center'><%= t 'drug_type'%></th>
                <th class='text-center'><%= t 'first_use_age'%></th>
                <th class='text-center'><%= t 'continuous_usage_duration'%></th>
                <th class='text-center'><%= t 'count'%></th>
                <th class='text-center'><%= t 'type'%></th>
                <th class='text-center'><%= t 'description'%></th>
                <th class='text-center'><%= t 'is_mainspring'%></th>
                <th colspan="3" class='text-center'><%= link_to (t 'new_abusing'), new_patient_abusing_profile_abusing_path(@abusing_profile.patient,@abusing_profile), :class => "btn , btn-primary" %></th>
              </tr>
            </thead>

            <tbody>
              <% @abusing_profile.abusings.each do |abusing| %>
                <tr>
                  <td><%= t abusing.drug_type %></td>
                  <td><%= abusing.first_use_age %></td>
                  <td><%= abusing.continuous_usage_duration %></td>
                  <td><%= abusing.count %></td>
                  <td><%= t abusing.abusing_type %></td>
                  <td><%= abusing.description %></td>
                  <td><%= abusing.is_mainspring %></td>
                  <td><%= link_to (t 'show'), patient_abusing_profile_abusing_path(@abusing_profile.patient, @abusing_profile, abusing), :class => "btn btn-primary"  %></td>
                  <td><%= link_to (t 'edit'), edit_patient_abusing_profile_abusing_path(@abusing_profile.patient, @abusing_profile, abusing), :class => "btn btn-primary"  %></td>
                  <td><%= link_to (t 'destroy'), patient_abusing_profile_abusing_path(@abusing_profile.patient, @abusing_profile, abusing), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <div class='text-center'>
        </div>
        </div>
      <div class='col-md-'>
      </div>
    </div>
  </div>
</div>