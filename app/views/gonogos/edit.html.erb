<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WCAP</title>
    <%= stylesheet_link_tag    'application' , media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= javascript_tag do %>
        var maxTiral = <%= @gonogo.rectangles.count %>;
    <% end %>


    <div id="page" >
      <main id="main" class="site-main">
        
        <div id="BlueVert"></div>
            <div id="GreenVert"></div>
          <div id="WhiteVert"></div>
        <div id="BlueHori"></div>
        <div id="GreenHori"></div>
            <div id="WhiteHori"></div>
            <div id="WhitePlus"></div>
            <div id="WhiteWithNoBorder"></div>


        <% @gonogo.rectangles.each_with_index do |rectangle , i| %>
          <%= render :partial => '/rectangles/form' , :locals =>{:rectangle => rectangle, :form_index => i}  %>
        <%end%>

      
        <div id="exit">
          <%= button_to 'finish', finish_gonogo_path(@gonogo) , :method=>:post , :id => "finish_gonogo"  %>
        </div>
      </main>
    </div>

    <script> 
        start();
        $(document).ready(setDirection());
    </script>
  </body>
</html>


