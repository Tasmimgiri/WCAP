<div class='container'>
  
  <div class='row'>
    <div class='col-md-3'>
    </div>
    <div class='col-md-6 col-sm-6'>
      <h1 class='section-title'><%= t 'patients_list'%></h1>
      <div class='panel panel-primary '>

        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'><%= t 'first_name'%></th>
              <th class='text-center'><%= t 'last_name'%></th>
              <th colspan="2" class='text-center'></th>
            </tr>
          </thead>

          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td><%= patient.first_name %></td>
                <td><%= patient.last_name %></td>
                <td><%= link_to (t 'show'), patient , :class => "btn btn-primary"%></td>
                <td><%= link_to (t 'edit'), edit_patient_path(patient), :class => "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class='text-center'>
        <% unless current_user.related_clinics.empty? %>
          <%= link_to (t 'new_patient'), new_patient_path , :class => "smooth-scroll btn btn-lg btn-link " %>
        <% end %>
      </div>
      </div>
    <div class='col-md-3'>
    </div>
  </div>
</div>