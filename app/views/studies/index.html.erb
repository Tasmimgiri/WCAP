<div class='container'>
  
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'studies_list'%></h1>
      <div class='panel panel-primary '>
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'><%= t 'admin'%></th>
              <th class='text-center'><%= t 'description'%></th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @studies.each do |study| %>
              <tr>
                <td><%= study.admin.profile.name %></td>
                <td><%= study.description %></td>
                <td><%= link_to (t 'show'), study , :class => "btn btn-primary"%></td>
                <td><%= link_to (t 'edit'), edit_study_path(study), :class => "btn btn-primary" %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class='text-center'>
        <%= link_to (t 'new_study'), new_study_path, :class => "smooth-scroll btn btn-lg btn-link " %>
      </div>
      </div>
    <div class='col-md-1'>
    </div>
  </div>
</div>