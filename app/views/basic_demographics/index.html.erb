<h1><%= t 'basic_demographics_list'%></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'patient'%></th>
      <th><%= t 'file_number'%></th>
      <th><%= t 'private_code'%></th>
      <th><%= t 'gender'%></th>
      <th><%= t 'year_of_birth'%></th>
      <th><%= t 'interview_date'%></th>
      <th><%= t 'marital_status'%></th>
      <th><%= t 'educational_year'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basic_demographics.each do |basic_demographic| %>
      <tr>
        <td><%= basic_demographic.patient %></td>
        <td><%= basic_demographic.file_number %></td>
        <td><%= basic_demographic.private_code %></td>
        <td><%= t basic_demographic.gender %></td>
        <td><%= basic_demographic.year_of_birth %></td>
        <td><%= basic_demographic.interview_date %></td>
        <td><%= t basic_demographic.marital_status  %></td>
        <td><%= basic_demographic.educational_year %></td>
        <td><%= link_to (t 'show'), basic_demographic %></td>
        <td><%= link_to (t 'edit'), edit_basic_demographic_path(basic_demographic) %></td>
        <td><%= link_to (t 'destroy'), basic_demographic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t 'new_basic_demographic'), new_basic_demographic_path %>
