<div class='container'>
  
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'basic_demographics_list'%></h1>
      <div class='panel panel-primary '>
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr >
              <th class='text-center'><%= t 'patient'%></th>
              <th class='text-center'><%= t 'file_number'%></th>
              <th class='text-center'><%= t 'private_code'%></th>
              <th class='text-center'><%= t 'gender'%></th>
              <th class='text-center'><%= t 'year_of_birth'%></th>
              <th class='text-center'><%= t 'interview_date'%></th>
              <th class='text-center'><%= t 'marital_status'%></th>
              <th class='text-center'><%= t 'educational_year'%></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @basic_demographics.each do |basic_demographic| %>
              <tr>
                <td><%= basic_demographic.patient %></td>
                <td><%= basic_demographic.file_number %></td>
                <td><%= basic_demographic.private_code %></td>
                <td><%= t basic_demographic.gender %></td>
                <td><%= basic_demographic.year_of_birth %></td>
                <td><%= basic_demographic.interview_date %></td>
                <td><%= t basic_demographic.marital_status  %></td>
                <td><%= basic_demographic.educational_year %></td>
                <td><%= link_to (t 'show'), basic_demographic , :class => "btn btn-primary" %></td>
                <td><%= link_to (t 'edit'), edit_basic_demographic_path(basic_demographic) , :class => "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class='text-center'>
        <%= link_to (t 'new_basic_demographic'), new_basic_demographic_path, :class => "smooth-scroll btn btn-lg btn-link " %>
      </div>
      </div>
    <div class='col-md-1'>
    </div>
  </div>
</div>