<section class="section  section-testimonial loaded">
  <div class='container'>
    <div class='row'>
      <div class='col-md-3'>
      </div>

      <div class='col-md-6 col-sm-6'>
        <div class='panel panel-primary '>
          <div class="panel-heading">
              <h3 class="panel-title">
                 <%= t('.sign_in', :default => "Sign in") %>
              </h3>
           </div>
          
          <div class="panel-body">

            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div class="field"><%= f.label :email %>
              <%= f.email_field :email, :class => "reverse-dir" %></div>

              <div class="field"><%= f.label :password %>
              <%= f.password_field :password, :class => "reverse-dir" %></div>

              <% if devise_mapping.rememberable? -%>
                <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
              <% end -%>

              <div><%= f.submit t('.sign_in', :default => "Sign in"), :class => "btn btn-default smooth-scroll" %></div>
            <% end %>
          </div>
          
        </div>
        <div class="text-center">

          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class='col-md-3'>
      </div>
    </div>
  </div>
</section>