
<table class='table table-striped table-bordered text-center'>
  <thead>
    <tr>
      <th class='text-center' colspan="1"><%= t 'ddt_question'%></th>
      <th class='text-center'><%= t 'response'%></th>
    </tr>
  </thead>

  <tbody>
    <% @ddt.ddt_answers.each do |answer| %>
      <tr>
        <td><% if answer.ddt_question.question_type == "deterministic" %>

              <%= "#{t 'ddt_deter_first_part'} #{answer.ddt_question.definite_value} #{t 'ddt_deter_second_part'} #{answer.ddt_question.indefinite_value } #{t 'ddt_deter_third_part'} #{answer.ddt_question.risk_rate } #{t 'ddt_deter_forth_part'}" %>

          <% else %>

              <%= "#{t 'ddt_prob_first_part'} #{answer.ddt_question.definite_value } #{t 'ddt_prob_second_part'} #{answer.ddt_question.indefinite_value } #{t 'ddt_prob_third_part'} #{answer.ddt_question.risk_rate } #{t 'ddt_prob_forth_part'}  " %>


          <% end %></td>
        <td> 
          <% if answer.response %>
            <%= t 'first' %>
          <% else %>
            <%= t 'second' %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

