<div class="field text-center ">
  <% if ddt_answer.ddt_question.question_type == "deterministic" %>
      <%= "#{t 'ddt_deter_first_part'} " %>
      <br>
      <div >
        <%= button_to "\u200F #{ddt_answer.ddt_question.definite_value} #{t 'ddt_deter_second_part'}",update_ddt_ddt_answer_path(@ddt, ddt_answer , :response => :true, :form_index => form_index)  , :method=>:post, :remote => :true, :class => "btn btn-info btn-lg" %>
      </div>
      <br>
      <%= "#{t 'or'} " %>
      <br>
      <%= button_to "\u200F #{ddt_answer.ddt_question.indefinite_value } #{t 'ddt_deter_third_part'} #{ddt_answer.ddt_question.risk_rate } #{t 'ddt_deter_forth_part'}",update_ddt_ddt_answer_path(@ddt, ddt_answer, :response => :false, :form_index => form_index)  , :method=>:post, :remote => :true,  :class => "btn btn-info btn-lg" %>

  <% else %>

      <%= "#{t 'ddt_prob_first_part'}   " %>
      <br>
      
      <%= button_to "\u200F #{ddt_answer.ddt_question.definite_value } #{t 'ddt_prob_second_part'}",update_ddt_ddt_answer_path(@ddt, ddt_answer , :response => :true, :form_index => form_index)  , :method=>:post, :remote => :true, :class => "btn btn-info btn-lg" %>

      
      <br>
      <%= "#{t 'or'} " %>
      <br>
      <%= button_to "\u200F #{ddt_answer.ddt_question.indefinite_value } #{t 'ddt_prob_third_part'} #{ddt_answer.ddt_question.risk_rate } #{t 'ddt_prob_forth_part'} ",update_ddt_ddt_answer_path(@ddt, ddt_answer, :response => :false, :form_index => form_index)  , :method=>:post, :remote => :true,  :class => "btn btn-info btn-lg" %>

  <% end %>
</div>