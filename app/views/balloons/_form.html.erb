  <div id="balloon_properties">
    <%= form_for(:balloon, :url => update_balloon_path(balloon), :id => "balloon_form", :method=>:post, :remote => true ) do |f| %>
      
      <div  class="field" id="pumps">
        <%= f.label :pumps %><br>
        <%= f.number_field :pumps , :id=>"#{form_index}_pumps"%>
      </div>
      <div class="field" id="explosion">
        <%= f.label :explosion %><br>
        <%= f.number_field :explosion , :id=>"#{form_index}_explosion"%>
      </div>
      <div class="field" id="response_time">
        <%= f.label :response_time %><br>
        <%= f.number_field :response_time , :id=>"#{form_index}_response_time"%>
      </div>
      <input type="submit" value="Save Balloon" name="commit" id="<%="#{form_index}"%>_submit_balloon">
      </input>
    <% end %>
</div>
