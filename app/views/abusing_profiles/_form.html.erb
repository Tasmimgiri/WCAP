<%= form_for([@abusing_profile.patient, @abusing_profile]) do |f| %>
  <% if @abusing_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@abusing_profile.errors.count, "error") %> prohibited this abusing_profile from being saved:</h2>

      <ul>
      <% @abusing_profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= t 'patient' %> :
    <%= "#{@abusing_profile.patient.first_name} #{@abusing_profile.patient.last_name}"%>
  </div>
