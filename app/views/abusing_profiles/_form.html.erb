  </div>
  <div class="field">
    <%= t 'overdose_count' %><br>
    <%= f.number_field :overdose_count,:class=>"reverse-dir", :onchange => "checkIfNumeric.call(this);" %>
  </div>
  <div class="field">
    <%= t 'freakout_count' %><br>
    <%= f.number_field :freakout_count,:class=>"reverse-dir", :onchange => "checkIfNumeric.call(this);" %>
  </div>
  
  <div class="actions">
    <%= f.submit (t 'submit', :default => "Submit") ,:class=>"btn btn-default smooth-scroll"%>
  </div>
<% end %>
