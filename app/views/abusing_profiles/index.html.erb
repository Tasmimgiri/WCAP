<div class='container'>
  
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-10 col-sm-10'>
      <h1 class='section-title'><%= t 'abusing_profiles_list'%></h1>
      <div class='panel panel-primary '>
        <table class='table table-striped table-bordered text-center'>
          <thead>
            <tr>
              <th class='text-center'><%= t 'cost_per_month'%></th>
              <th class='text-center'><%= t 'overdose_count'%></th>
              <th class='text-center'><%= t 'freakout_count'%></th>
              <th class='text-center'><%= t 'patient'%></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @abusing_profiles.each do |abusing_profile| %>
              <tr>
                <td><%= abusing_profile.cost_per_month %></td>
                <td><%= abusing_profile.overdose_count %></td>
                <td><%= abusing_profile.freakout_count %></td>
                <td><%= abusing_profile.patient %></td>
                <td><%= link_to (t 'show'), abusing_profile , :class => "btn btn-primary" %></td>
                <td><%= link_to (t 'edit'), edit_abusing_profile_path(abusing_profile) , :class => "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      
      <div class='text-center'>
      </div>
      </div>
    <div class='col-md-1'>
    </div>
  </div>
</div>